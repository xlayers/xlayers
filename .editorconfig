# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,vue}]
quote_type = single

[*.{html}]
quote_type = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[Makefile]
indent_size = 4
indent_style = tab
