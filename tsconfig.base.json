{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "es2019"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@xlayers/angular-codegen": ["libs/angular-codegen/src/index.ts"],
      "@xlayers/css-codegen": ["libs/css-codegen/src/index.ts"],
      "@xlayers/lit-element-codegen": ["libs/lit-element-codegen/src/index.ts"],
      "@xlayers/react-codegen": ["libs/react-codegen/src/index.ts"],
      "@xlayers/stencil-codegen": ["libs/stencil-codegen/src/index.ts"],
      "@xlayers/svg-codegen": ["libs/svg-codegen/src/index.ts"],
      "@xlayers/vue-codegen": ["libs/vue-codegen/src/index.ts"],
      "@xlayers/web-codegen": ["libs/web-codegen/src/index.ts"],
      "@xlayers/web-component-codegen": [
        "libs/web-component-codegen/src/index.ts"
      ],
      "@xlayers/xaml-codegen": ["libs/xaml-codegen/src/index.ts"],
      "@xlayers/sketch-lib": ["libs/sketch-lib/src/index.ts"],
      "@xlayers/sketch-ingestor": ["libs/sketch-ingestor/src/index.ts"],
      "@xlayers/sketchapps": ["libs/sketchapps/src/index.ts"],
      "@xlayers/test-helpers": ["libs/test-helpers/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
